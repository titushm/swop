<Page x:Class="Swop.ModsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Swop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModsPage">
    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="25" Background="#1e2022" Width="800" Padding="5" HorizontalAlignment="Center" Foreground="#e8e6e3">Mod Manager</TextBlock>
        <StackPanel Margin="5 5 0 0">
            <TextBlock FontSize="20" Margin="0 0 0 10" Foreground="DarkGray">Profiles</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="NewProfileTextBox" MinWidth="150" Margin="0 0 10 0"></TextBox>
                <Button Margin="0 0 10 0" Name="SaveProfileButton" Click="SaveProfileButton_Click">Save Profile</Button>
                <Button Name="ImportProfileButton" Click="ImportProfileButton_Click">Import Profile</Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>

