<Application x:Class="Swop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:local="clr-namespace:Swop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryTextFore" Color="#e8e6e3"/>
            <SolidColorBrush x:Key="SecondaryTextFore" Color="#bfbcb7"/>
            <SolidColorBrush x:Key="PrimaryBack" Color="#0c0d0d"/>
            <SolidColorBrush x:Key="SecondaryBack" Color="#1e2022"/>
            <SolidColorBrush x:Key="PrimaryAccent" Color="#3d3d4c"/>
            <ControlTemplate x:Key="ToggleSwitch" TargetType="ToggleButton">
                    <ToggleButton Content="{TemplateBinding Content}" 
                                  HorizontalAlignment="Right"
                                  BorderThickness="1"
                                  BorderBrush="#7B9BAF"
                                  Style="{DynamicResource {x:Static adonisUi:Styles.ToggleSwitch}}"/>
            </ControlTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/dark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
